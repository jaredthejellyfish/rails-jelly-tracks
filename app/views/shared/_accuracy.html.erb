<div class= "accuracy">
  <div class= "accuracy-header">
    <%= image_tag "target_icon.svg", class: "target-icon" %>
    <h3 class="accuracy-title">Accuracy</h3>
  </div>
  <div class="accuracy-content">
    <%= inline_svg_tag("accuracy-target.svg", class: "accuracy-person") %>
    <div class="accuracy-grid">
      <div class="grid-item percentage">33%</div>
      <div class="grid-item percentage"> <%= @head_shots %> </div>
      <div class="grid-item percentage hits-label"> HITS </div>
      <div class="grid-item percentage big">33%</div>
      <div class="grid-item percentage corrector-hits"> <%= @body_shots %> </div>
      <div class="grid-item percentage hits-label corrector-label"> HITS </div>
      <div class="grid-item percentage">33%</div>
      <div class="grid-item percentage"> <%= @leg_shots %> </div>
      <div class="grid-item percentage hits-label"> HITS </div>
    </div>
  </div>
</div>
